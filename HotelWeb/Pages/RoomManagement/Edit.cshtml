@page
@model HotelWeb.Pages.RoomManagement.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Room.Id" />
            <div class="form-group">
                <label asp-for="Room.RoomTypeId" class="control-label"></label>
                <select asp-for="Room.RoomTypeId" class="form-control">
                    @foreach (var item in Model.RoomTypeList)
                    {
                        <option value="@item.Id"> @item.Title</option>
                    }
                </select>
                <span asp-validation-for="Room.RoomTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.Title" class="control-label"></label>
                <input asp-for="Room.Title" class="form-control" />
                <span asp-validation-for="Room.Title" class="text-danger"></span>
            </div>
            <img src="~/img/@Model.Room.Image" width="300" height="300" />
            <input asp-for="Room.Image" type="hidden" class="form-control" />
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.Description" class="control-label"></label>
                <input asp-for="Room.Description" class="form-control" />
                <span asp-validation-for="Room.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.Amount" class="control-label"></label>
                <input type="number" asp-for="Room.Amount" class="form-control" />
                <span asp-validation-for="Room.Amount" class="text-danger"></span>
            </div>
         
            <input asp-for="Room.Active" type="hidden" class="form-control" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
